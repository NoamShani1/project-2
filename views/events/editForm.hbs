<h1>Edit your event</h1>
{{#with events}}
<form action="/event/edit/{{_id}}" method="POST" class='styled-form'>
<div class= 'editForm'>
  <div class="container-input-text">
        <label for="title"></label>
        <input type="text" name="title" id="title" placeholder="title"  value="{{title}}"  />
        <span class="error-message">Error Text</span>
           </div>  
  
{{/with}}
{{#with newDate}}
      <div class="container-input-text">
        <label for="date"></label>
        <input type="date" name="date" id="date" placeholder="date"  value="{{date}}"  />
        <span class="error-message">Error Text</span>
    </div>
    
{{/with}}
{{#with events}}

    <div class="container-input-text">
        <label for="street"></label>
        <input type="text" name="street" id="street" placeholder="Street" value="{{address.street}}"  />
        <span class="error-message">Error Text</span>
    </div>
 
     <div class="container-input-text">
        <label for="city"></label>
        <input type="text" name="city" id="city" placeholder="City" value="{{address.city}}"/>
        <span class="error-message">Error Text</span>
    </div>

<div class="container-input-text">
        <label for="zipcode"></label>
        <input type="text" name="zipcode" id="zipcode" placeholder="Zipcode" value="{{address.zipcode}}"/>
        <span class="error-message">Error Text</span>
    </div>

   
    <div class="container-input-text">
        <label for="about"></label>
        <textarea placeholder="About" name="about" value="{{about}}"></textarea>
        <span class="error-message">Error Text</span>
    </div>

 <div class="container-input-text">
        <label for="minAge"></label>
        <input type="number" name="minAge" id="minAge" min="1" max="18" placeholder="Age" value="{{minAge}}" />
        <span class="error-message">Error Text</span>
    </div>

<div class="radio-container">
    <input type="radio" name="indoors" id="radio1" value="indoors"/>
    <label for="radio1" class="radio-label"></label>
    <label for="radio1" class="text-label">Indoors</label>
</div>

<div class="radio-container">
    <input type="radio" name="indoors" id="radio2" value="outdoors"/>
    <label for="radio2" class="radio-label"></label>
    <label for="radio2" class="text-label">Outdoors</label>
</div>

<div class="radio-container">
    <input type="radio" name="indoors" id="radio3" value="indoors & outdoors"/>
    <label for="radio3" class="radio-label"></label>
    <label for="radio3" class="text-label">both</label>
</div>

 <div class="container-input-text">
        <label for="cost"></label>
        <input type="number" name="cost" id="cost" placeholder="Cost" value="{{cost}}" />
        <span class="error-message">Error Text</span>
    </div>



 <div class="container-input-text">
        <label for="artists"></label>
        <input type="text" name="artists" id="artists" placeholder="Artits" value="{{artists}}"/>
        <span class="error-message">Error Text</span>
    </div>


    <button type="submit">Update this Event</button>
  </div>
</form>
{{/with}}