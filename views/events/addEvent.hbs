
<form id="add" action="/events/add" method="POST">
    <h1>Add new event</h1>
    <label for="title">Title</label>
    <input type="text" name="title" id="title">

    <label for="date">Date</label>
    <input type="date" name="date" id="date">

    <label for="genre">Genre</label>
    <input type="text" name="genre" id="genre">

    <label for="street">Street</label>
    <input type="text" name="street" id="street">

    <label for="city">City</label>
    <input type="text" name="city" id="city">

    <label for="zipcode">Zipcode</label>
    <input type="text" name="zipcode" id="zipcode">

    <label for="about">About</label>
    <input type="textarea" name="about" id="about">

    Indoors<input checked="checked" name="indoors" type="radio" value="indoors" />
	Outdoors<input name="indoors" type="radio" value="outdoors" />
  	Both<input name="indoors" type="radio" value="both" />

    <label for="cost">Cost</label>
    <input type="number" name="cost" id="cost" min="0">

    <label for="minAge">Age</label>
    <input type="number" name="minAge" id="minAge" min="1" max="18">

    <label for="artists">Artists</label>
    <input type="text" name="artists" id="artists">

    <button type="submit">Add Event</button>
    {{#if message}}
    <p style="color: red">{{message}}</p>
{{/if}}
</form>
